<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  新密码"
        android:textSize="25sp"
        android:id="@+id/TextView_pwChange_newPassword"
        android:layout_marginTop="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/EditText_pwChange_newPassword"
        android:hint="请输入新密码" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  确认密码"
        android:textSize="25sp"
        android:id="@+id/TextView_pwChange_PasswordRepeat"
        android:layout_marginTop="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/EditText_pwChange_PasswordRepeat"
        android:hint="请再次输入密码" />


    <Button
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="确认修改"
        android:textColor="@color/white"
        android:id="@+id/button_pwChange_valid"
        android:background="@color/NkuPurple"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp" />


</LinearLayout>