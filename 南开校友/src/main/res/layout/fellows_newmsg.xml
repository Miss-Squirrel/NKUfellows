<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="收件人："
            android:textSize="20sp"
            android:gravity="bottom"
            android:id="@+id/TextView_NewMsg_TargSid"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/EditText_NewMsg_TargSid"
            android:layout_alignTop="@+id/TextView_NewMsg_TargSid"
            android:layout_toEndOf="@+id/TextView_NewMsg_TargSid"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="主题："
            android:textSize="20sp"
            android:gravity="bottom"
            android:id="@+id/TextView_NewMsg_Theme" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/EditText_NewMsg_Theme"
            android:layout_alignTop="@+id/TextView_NewMsg_Theme"
            android:layout_toEndOf="@+id/TextView_NewMsg_Theme" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="日期："
            android:textSize="20sp"
            android:gravity="bottom"
            android:id="@+id/TextView_NewMsg_Date" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/EditText_NewMsg_Date"
            android:layout_alignTop="@+id/TextView_NewMsg_Date"
            android:layout_toEndOf="@+id/TextView_NewMsg_Date" />
    </RelativeLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:id="@+id/EditText_NewMsg_Content"
            android:background="#f3f3f3"
            android:hint="请输入消息内容"
            />

</LinearLayout>