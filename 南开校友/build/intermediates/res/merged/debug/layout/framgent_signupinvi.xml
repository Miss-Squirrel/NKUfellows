<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="邀请人姓名"
        android:textSize="20sp"
        android:id="@+id/TextView_SignUpInvi_InviName"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/EditText_SignUpInvi_InviName"
        android:hint="请输入邀请人姓名"
        android:layout_alignTop="@+id/TextView_SignUpInvi_InviName"
        android:layout_toRightOf="@+id/TextView_SignUpInvi_InviName"
        android:layout_toEndOf="@+id/TextView_SignUpInvi_InviName" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="邀 请 码"
        android:textSize="20sp"
        android:id="@+id/TextView_SignUpInvi_Code"
        android:layout_below="@+id/TextView_SignUpInvi_InviName"
        android:layout_marginTop="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:hint="请输入邀请码"
        android:id="@+id/EditText_SignUpInvi_Code"
        android:layout_alignTop="@+id/TextView_SignUpInvi_Code"
        android:layout_toRightOf="@+id/TextView_SignUpInvi_Code"
        android:layout_toEndOf="@+id/TextView_SignUpInvi_Code"
        android:layout_alignLeft="@+id/EditText_SignUpInvi_InviName"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="您的姓名"
        android:textSize="20sp"
        android:id="@+id/TextView_SignUpInvi_Name"
        android:layout_below="@+id/TextView_SignUpInvi_Code"
        android:layout_marginTop="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditText_SignUpInvi_Name"
        android:hint="请输入您的真实姓名"
        android:textColor="#000000"
        android:layout_alignTop="@+id/TextView_SignUpInvi_Name"
        android:layout_toRightOf="@+id/TextView_SignUpInvi_Name"
        android:layout_toEndOf="@+id/TextView_SignUpInvi_Name"
        android:layout_alignLeft="@+id/EditText_SignUpInvi_InviName"/>



    <Button
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="验证信息"
        android:textColor="@color/white"
        android:background="@color/NkuPurple"
        android:id="@+id/button_SignUpInvi_Valid"
        android:layout_below="@+id/TextView_SignUpInvi_Name"
        android:layout_toRightOf="@+id/TextView_SignUpInvi_Name"
        android:layout_toEndOf="@+id/TextView_SignUpInvi_Name"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
