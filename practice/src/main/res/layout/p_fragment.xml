<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <RadioGroup
        android:id="@+id/radioGroup_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/radioButton_fragment1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="新闻活动"
            android:gravity="center"
            android:drawableTop="@drawable/ic_launcher"
            android:background="@drawable/radio_pressed"/>

        <RadioButton
            android:id="@+id/radioButton_fragment2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="查找校友"
            android:gravity="center"
            android:drawableTop="@drawable/ic_launcher"
            android:background="@drawable/radio_pressed"/>
        <RadioButton
            android:id="@+id/radioButton_fragment3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="捐赠母校"
            android:gravity="center"
            android:drawableTop="@drawable/ic_launcher"
            android:background="@drawable/radio_pressed"/>
        <RadioButton
            android:id="@+id/radioButton_fragment4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="校友会"
            android:gravity="center"
            android:drawableTop="@drawable/ic_launcher"
            android:background="@drawable/radio_pressed"/>
        <RadioButton
            android:id="@+id/radioButton_fragment5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="我的校友"
            android:gravity="center"
            android:drawableTop="@drawable/ic_launcher"
            android:background="@drawable/radio_pressed"/>
    </RadioGroup>

</LinearLayout>